{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Dependencies",
      "type": "shell",
      "command": "bash",
      "args": ["-c", "./.vscode/scripts/install.sh"],
      "windows": {
        "command": "pwsh",
        "args": [
          "-NoProfile",
          "-ExecutionPolicy",
          "Bypass",
          "-File",
          ".\\.vscode\\scripts\\install.ps1"
        ]
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Install Dependencies (if needed)",
      "type": "shell",
      "command": "bash",
      "args": ["-c", "./.vscode/scripts/install.sh"],
      "windows": {
        "command": "pwsh",
        "args": [
          "-NoProfile",
          "-ExecutionPolicy",
          "Bypass",
          "-File",
          ".\\.vscode\\scripts\\install.ps1"
        ]
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Start Development Server",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "dev"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "dependsOn": ["Install Dependencies (if needed)"]
    },
    {
      "label": "Start Development Server with Drafts",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "dev:drafts"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "dependsOn": ["Install Dependencies (if needed)"]
    },
    {
      "label": "Build Production",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "build"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Lint All",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "lint"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Create New Content",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "create"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Preview Production Build",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "preview"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "dependsOn": ["Build Production"]
    },
    {
      "label": "Create New Blog Post",
      "type": "shell",
      "command": "hugo",
      "args": [
        "new",
        "content",
        "blog/${input:blogCategory}/${input:blogFilename}.md"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Create New Tutorial",
      "type": "shell",
      "command": "hugo",
      "args": [
        "new",
        "content",
        "tutorials/${input:tutorialSlug}/index.md"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Create New Documentation",
      "type": "shell",
      "command": "hugo",
      "args": [
        "new",
        "content",
        "docs/${input:docsCategory}/${input:docsFilename}.md"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "blogCategory",
      "type": "pickString",
      "description": "Wybierz kategorię bloga:",
      "options": [
        "flat",
        "instalacja",
        "interior-design",
        "wyposarzenie"
      ],
      "default": "instalacja"
    },
    {
      "id": "blogFilename",
      "type": "promptString",
      "description": "Nazwa pliku (bez .md, np. 'moj-nowy-post'):"
    },
    {
      "id": "tutorialSlug",
      "type": "promptString",
      "description": "Slug tutoriala (folder name, np. 'instalacja-gniazdek'):"
    },
    {
      "id": "docsCategory",
      "type": "pickString",
      "description": "Wybierz kategorię dokumentacji:",
      "options": [
        "actuators",
        "cables",
        "concepts",
        "connectors",
        "drivers",
        "electrical-elements",
        "electrical-installation",
        "electrical-practice",
        "electricity-theory",
        "interfaces",
        "interior-design",
        "leds",
        "micro-controllers",
        "networks",
        "sensors",
        "software",
        "systems"
      ],
      "default": "actuators"
    },
    {
      "id": "docsFilename",
      "type": "promptString",
      "description": "Nazwa pliku (bez .md, np. 'przekaznik'):"
    }
  ]
}
