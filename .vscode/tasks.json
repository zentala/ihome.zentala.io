{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Dependencies",
      "type": "shell",
      "command": "bash",
      "args": ["-c", "./.vscode/scripts/install.sh"],
      "windows": {
        "command": "pwsh",
        "args": [
          "-NoProfile",
          "-ExecutionPolicy",
          "Bypass",
          "-File",
          ".\\.vscode\\scripts\\install.ps1"
        ]
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Install Dependencies (if needed)",
      "type": "shell",
      "command": "bash",
      "args": ["-c", "./.vscode/scripts/install.sh"],
      "windows": {
        "command": "pwsh",
        "args": [
          "-NoProfile",
          "-ExecutionPolicy",
          "Bypass",
          "-File",
          ".\\.vscode\\scripts\\install.ps1"
        ]
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Start Development Server",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "dev"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "dependsOn": ["Install Dependencies (if needed)"]
    },
    {
      "label": "Start Development Server with Drafts",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "dev:drafts"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "dependsOn": ["Install Dependencies (if needed)"]
    },
    {
      "label": "Build Production",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "build"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Lint All",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "lint"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Create New Content",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "create"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Preview Production Build",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "preview"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "dependsOn": ["Build Production"]
    },
    {
      "label": "Create New Blog Post",
      "type": "shell",
      "command": "hugo",
      "args": [
        "new",
        "content",
        "${input:blogPath}"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Create New Tutorial",
      "type": "shell",
      "command": "hugo",
      "args": [
        "new",
        "content",
        "${input:tutorialPath}"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Create New Documentation",
      "type": "shell",
      "command": "hugo",
      "args": [
        "new",
        "content",
        "${input:docsPath}"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "blogPath",
      "type": "promptString",
      "description": "Blog post path (e.g., blog/instalacja/moj-nowy-post.md or blog/flat/nazwa.md)",
      "default": "blog/"
    },
    {
      "id": "tutorialPath",
      "type": "promptString",
      "description": "Tutorial path (e.g., tutorials/nowy-tutorial/index.md)",
      "default": "tutorials/"
    },
    {
      "id": "docsPath",
      "type": "promptString",
      "description": "Docs path (e.g., docs/actuators/nowy-komponent.md)",
      "default": "docs/"
    }
  ]
}
